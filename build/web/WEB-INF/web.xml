<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>cleanergy.webill.filters.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ConsumerFilter</filter-name>
        <filter-class>cleanergy.webill.filters.ConsumerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>cleanergy.webill.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/newUpload</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/saveProfile</url-pattern>
        <url-pattern>/listNotifications</url-pattern>
        <url-pattern>/viewNotification</url-pattern>
         <url-pattern>/uploadFile</url-pattern>
        <url-pattern>/checkConsumerImage</url-pattern>
        <url-pattern>/confirmImageData</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ConsumerFilter</filter-name>
        <url-pattern>/addUser</url-pattern>
        <url-pattern>/listUsers</url-pattern>
        <url-pattern>/saveUser</url-pattern>
        <url-pattern>/userUpdate</url-pattern>
        <url-pattern>/saveUpdateUser</url-pattern>
        <url-pattern>/enabledisableUser</url-pattern>
        <url-pattern>/addMeter</url-pattern>
        <url-pattern>/saveMeter</url-pattern>
        <url-pattern>/listMeters</url-pattern>
        <url-pattern>/meterEnableDisable</url-pattern>
        <url-pattern>/deleteMeter</url-pattern>
        <url-pattern>/vars</url-pattern>
        <url-pattern>/saveVariable</url-pattern>
        <url-pattern>/listVariables</url-pattern>
         <url-pattern>/updateVariable</url-pattern>
        <url-pattern>/saveVariableUpdate</url-pattern>
        <url-pattern>/assignment</url-pattern>
        <url-pattern>/saveAssignment</url-pattern>
        <url-pattern>/listAssignments</url-pattern>
        <url-pattern>/deleteAssignment</url-pattern>
        <url-pattern>/generateBill</url-pattern>
        <url-pattern>/bills</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/addUser</url-pattern>
        <url-pattern>/listUsers</url-pattern>
        <url-pattern>/saveUser</url-pattern>
        <url-pattern>/userUpdate</url-pattern>
        <url-pattern>/saveUpdateUser</url-pattern>
        <url-pattern>/enabledisableUser</url-pattern>
        <url-pattern>/newUpload</url-pattern>
        <url-pattern>/uploadFile</url-pattern>
        <url-pattern>/checkConsumerImage</url-pattern>
        <url-pattern>/addMeter</url-pattern>
        <url-pattern>/saveMeter</url-pattern>
        <url-pattern>/listMeters</url-pattern>
        <url-pattern>/meterEnableDisable</url-pattern>
        <url-pattern>/deleteMeter</url-pattern>
        <url-pattern>/vars</url-pattern>
        <url-pattern>/saveVariable</url-pattern>
        <url-pattern>/listVariables</url-pattern>
         <url-pattern>/updateVariable</url-pattern>
        <url-pattern>/saveVariableUpdate</url-pattern>
        <url-pattern>/assignment</url-pattern>
        <url-pattern>/saveAssignment</url-pattern>
        <url-pattern>/listAssignments</url-pattern>
        <url-pattern>/deleteAssignment</url-pattern>
        <url-pattern>/confirmImageData</url-pattern>
        <url-pattern>/checkout</url-pattern>
        <url-pattern>/generateBill</url-pattern>
        <url-pattern>/listBills</url-pattern>
        <url-pattern>/download</url-pattern>
        <url-pattern>/listNotifications</url-pattern>
        <url-pattern>/viewNotification</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/saveProfile</url-pattern>
        <url-pattern>/bills</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Dispatcher</servlet-name>
        <servlet-class>cleanergy.webill.Dispatcher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/login.action</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/addUser</url-pattern>
        <url-pattern>/listUsers</url-pattern>
        <url-pattern>/saveUser</url-pattern>
        <url-pattern>/enabledisableUser</url-pattern>
        <url-pattern>/newUpload</url-pattern>
        <url-pattern>/uploadFile</url-pattern>
        <url-pattern>/checkConsumerImage</url-pattern>
        <url-pattern>/addMeter</url-pattern>
        <url-pattern>/saveMeter</url-pattern>
        <url-pattern>/listMeters</url-pattern>
        <url-pattern>/vars</url-pattern>
        <url-pattern>/saveVariable</url-pattern>
        <url-pattern>/listVariables</url-pattern>
        <url-pattern>/assignment</url-pattern>
        <url-pattern>/saveAssignment</url-pattern>
        <url-pattern>/listAssignments</url-pattern>
        <url-pattern>/deleteAssignment</url-pattern>
        <url-pattern>/userUpdate</url-pattern>
        <url-pattern>/saveUpdateUser</url-pattern>
        <url-pattern>/meterEnableDisable</url-pattern>
        <url-pattern>/deleteMeter</url-pattern>
        <url-pattern>/updateVariable</url-pattern>
        <url-pattern>/saveVariableUpdate</url-pattern>
        <url-pattern>/confirmImageData</url-pattern>
        <url-pattern>/checkout</url-pattern>
        <url-pattern>/generateBill</url-pattern>
        <url-pattern>/listBills</url-pattern>
        <url-pattern>/download</url-pattern>
        <url-pattern>/listNotifications</url-pattern>
        <url-pattern>/viewNotification</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/saveProfile</url-pattern>
        <url-pattern>/bills</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
